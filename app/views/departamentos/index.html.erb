<div class="row-fluid">
  <div class="span9">
    <h1>Departamentos</h1>
  </div>
  <div class="span3">
    <%= link_to new_departamento_path, class: "btn btn-large btn-primary" do %>
      <i class="icon-plus icon-white"></i> Nuevo departamento
    <% end %>
  </div>
</div>

<div class="departamentos">
  <% @departamentos.each do |departamento| %>
    <div class="departamento">
      <h4><%= departamento.nombre %></h4>
      <p>Reposnable: <%= departamento.user.try(:full_name) %></p>
      <p>Usuarios:</p>
      <ul>
        <% departamento.users.each do |usuario| %>
          <li><%= usuario.full_name %></li>
        <% end %>
      </ul>
      <div class="actions">
        <div class="btn-group">
          <%= link_to departamento, class: "btn btn-success" do %>
            <i class="icon-search icon-white"></i> Ver
          <% end %>
          <%= link_to edit_departamento_path(departamento), class: "btn btn-primary" do %>
            <i class="icon-pencil icon-white"></i> Editar
          <% end %>
          <%= link_to departamento, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
            <i class="icon-remove icon-white"></i> Eliminar
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'New Departamento', new_departamento_path %>
